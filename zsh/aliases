# directories
alias codepath='cd ~/code'
alias bouqs='cd ~/Work/storefront'
alias FrontEnd='cd ~/code/FrontEnd'
alias training='cd ~/code/training-app'
alias dotfiles='cd ~/code/dotfiles'

# commands
alias hosts='sudo vim /private/etc/hosts'
alias aliases='vim ~/code/dotfiles/zsh/aliases'
alias tmuxfile='vim ~/.tmux.conf'
alias vimfile='vim ~/.vimrc'
alias nvimfile='vim ~/.config/nvim/init.vim'
alias u='cd ..'
alias c='clear'
alias e='exit'
alias so='source ~/code/dotfiles/zsh/aliases'
alias notes='vim ~/notes.md'
alias v='vim'
alias vi='vim'
alias mvim='/Applications/MacVim.app/Contents/MacOS/Vim -g'
alias ctags='/usr/local/bin/ctags'
alias rmfolder='rm -rf'
alias lca='colorls -lA --sd'
alias lc='colorls'

# git
alias m='git checkout master'
alias gcqa='git checkout qa'
alias gcstag='git checkout staging'
alias dev='git checkout dev'
alias gp='git pull'
alias gpm='git pull origin master'
alias gco='git checkout'
alias git-undo-commit='git reset HEAD~ '
alias new-branch='gco -b '
alias git-rename='git branch -m'
alias git-redo-commit='git commit --amend'

# docker
alias dc='docker-compose'
alias ds='docker-sync'
alias dcprune='docker system prune -a'
alias dcbuild='docker-compose build'
alias dcstop='docker-compose stop;'
alias dcs='docker-compose ps;'
alias dcrestart='docker-compose stop; docker-compose up -d app;'
alias dcup='docker-compose up -d app;'
alias dcupd='docker-compose up -d'
alias dcrspec='docker-compose run --rm test bundle exec rspec'
alias dcrailsc='docker-compose run --rm app bundle exec rails console'
alias dcroutes='docker-compose run --rm app bundle exec rails routes'
alias dcmigrate='docker-compose run --rm app bundle exec rails db:migrate'
alias dcrollback='docker-compose run --rm app bundle exec rails db:rollback'
alias dc-test-bash='docker-compose run --rm test bash'
alias dcbash='docker-compose run --rm app bash'
alias dcbundle='docker-compose run --rm app bundle'
alias dsrestart='docker-sync stop; docker-sync start;'
alias dsclean='docker-compose stop; docker-sync stop; docker-sync clean;'
alias test-logs='docker-compose exec app tail -f log/test.log'
alias dev-logs='docker-compose exec app tail -f log/development.log'
alias dca='docker attach bouqs_app'
alias dbreset='docker-compose run --rm app bundle exec rake bouqs:sample_data[true]'

# rubocop
alias rubo='rubocop'
alias ruborspec='rubocop --require rubocop-rspec'
alias rubofix='rubocop --safe-auto-correct'
alias rub-gst='git status --porcelain | grep -v "D " | cut -c4- |  xargs rubocop --safe-auto-correct'
